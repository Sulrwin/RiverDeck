{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "riverdeck:run (egui, no debugger)",
			"type": "shell",
			"command": "cargo",
			"args": ["run", "-p", "riverdeck-egui", "--", "--replace"],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "riverdeck:show existing (egui, no debugger)",
			"type": "shell",
			"command": "cargo",
			"args": ["run", "-p", "riverdeck-egui", "--", "--show"],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "frontend:dev",
			"type": "shell",
			"isBackground": true,
			"command": "deno",
			"args": ["task", "dev"]
		},
		{
			"label": "frontend:build",
			"type": "shell",
			"command": "deno",
			"args": ["task", "build"]
		}
	]
}
